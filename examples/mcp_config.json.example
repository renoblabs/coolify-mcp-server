{
  "mcpServers": {
    "coolify": {
      "comment": "Local STDIO mode - for Factory Bridge, Claude Desktop, JetBrains",
      "command": "doppler",
      "args": ["run", "--", "python", "/absolute/path/to/coolify-mcp-server/server.py", "--mode", "stdio"],
      "env": {},
      "disabled": false
    },
    "coolify-remote": {
      "comment": "Remote HTTP mode - for mobile AI apps, remote access",
      "endpoint": "https://mcp.your-domain.com",
      "transport": "sse",
      "authentication": {
        "type": "bearer",
        "token": "YOUR_MCP_AUTH_TOKEN_FROM_DOPPLER"
      }
    }
  }
}
